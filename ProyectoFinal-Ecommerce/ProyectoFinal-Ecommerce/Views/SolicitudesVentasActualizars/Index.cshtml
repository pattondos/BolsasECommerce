@model IEnumerable<ProyectoFinal_Ecommerce.Models.SolicitudesVentasActualizar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Solicitudes para actualizar precios de productos</h2>
<br />
<br />
<br />
<table class="table table-hover table-striped">
    <tr>
        <th>
            No. de orden
        </th>
        <th>
            Nombre del producto
        </th>
        <th>
            Stock
        </th>
        <th>
            Precio de compra
        </th>
        <th>
            Precio de venta actual
        </th>
        <th>
            Nuevo precio de venta
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Productos.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioActual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NuevoPrecio)
            </td>
            <td>
                @switch (item.Status)
                {
                    case 1:
                        <span class="bg-warning text-warning text-capitalize">Enviado</span>
                        break;
                    case 2:
                        <span class="bg-success text-success text-capitalize">Aprobado</span>
                        break;
                    case 3:
                        <span class="bg-danger text-danger text-capitalize">Rechazado</span>
                        break;

                }
            </td>
            <td>

                @Html.ActionLink("Borrar solicitud", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
<br />
<br />
<div class="container">
    <div class="container-fluid">

        @Html.ActionLink("Nueva solicitud", "Create", "SolicitudesVentasActualizar>", new { @class = "btn btn-primary" })
        @Html.ActionLink("Ventas", "AllVentas", "Ventas", new { }, new { @class = "btn btn-info" })
    </div>
</div>