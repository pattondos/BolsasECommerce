@model ProyectoFinal_Ecommerce.Models.DetalleCompraModel
@{
    ViewBag.Title = "Detalle de Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="text-align: center;">
    <h2>
        Detalle de compra
    </h2>
</div>
<br />
<div class="row">
    <div class="col-md-6 col-md-offset-6">
        <strong><span>Fecha de compra: </span></strong><span>@Model.compra.fecha.ToString("dddd, dd MMMM yyyy").ToUpper()</span>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-5">
        <strong><span>Proveedor: </span></strong><span>@Model.proveedor.razon_social</span>
    </div>
    <div class="col-md-5 col-md-offset-1">
        <strong><span>RFC: </span></strong><span>@Model.proveedor.rfc</span>
    </div>
</div>
<br />
<div style="text-align: center;">
    <h4>
        Productos adquiridos
    </h4>
</div>
<table class="table" id="compra-table" style="text-align: center;">
    <thead>
        <tr>
            <th style="text-align: center !important;">Producto</th>
            <th style="text-align: center !important;">Cantidad</th>
            <th style="text-align: center !important;">Precio Unitario</th>
            <th style="text-align: center !important;">Subtotal</th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (ProyectoFinal_Ecommerce.Models.ProductoCompraModel item in Model.detalles)
        {
            decimal t = item.precio_compra * item.cantidad;
            <tr>
                <td>@item.nombre</td>
                <td>@item.cantidad</td>
                <td>$ @item.precio_compra</td>
                <td>$ @t</td>
                @*<td style="color: red !important;">
                        <a href="@Url.Action("Productos", "Productos", new { id = item.id })" class="info" style="color: deepskyblue !important;"><i class="fa fa-eye"></i> Ver</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>
<div class="block text-center">
    <h3></h3>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="block-inside">
                <div class="row">
                    <div class="col-md-5 col-md-offset-1" style="text-align: right;">
                        <p style="font-weight: bold;">SUBTOTAL : </p>
                    </div>
                    <div class="col-md-4" style="text-align: right;">
                        <p style="font-weight: bold;">$ @Model.compra.subtotal </p>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <a href="/Compras/AllCompras" class="btn btn-block btn-success" style="font-size:1.5rem;">
                            Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

