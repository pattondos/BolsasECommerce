@model Final_Ecommerce.Models.UsuarioModel
@{
    /**/

    ViewBag.Title = "Registrarse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumbs">
    <ul>
        <li>@Html.ActionLink("Inicio", "Index", "Home") / </li>
        <li>Registro de cliente</li>
    </ul>
</div>
<div class="login-page">
    <h2>Datos de cliente</h2>
    <div class="row" style="text-align: left;">
        <div class="col-md-10 col-md-offset-1">
            @using (Html.BeginForm("Register", "Usuarios", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="block">
                    @*<h4 class="title">Contacto</h4>*@
                    <div class="block-inside" style="padding-left: 30px;">
                        <div id="customer_additional_fields">
                            <div class="row">
                                <div class="col-md-4" style="padding-right: 30px;">
                                    <div class="form-group">
                                        <div id="contact_name" class="field text-field">
                                            @Html.LabelFor(m => m.nombre, new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.nombre, new { @class = "text form-control" })
                                            @Html.ValidationMessageFor(m => m.nombre, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4" style="padding-right: 30px;">
                                    <div class="form-group">
                                        <div id="contact_name" class="field text-field">
                                            @Html.LabelFor(m => m.apellido_paterno, new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.apellido_paterno, new { @class = "text form-control" })
                                            @Html.ValidationMessageFor(m => m.apellido_paterno, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4" style="padding-right: 30px;">
                                    <div class="form-group">
                                        <div id="contact_apm" class="field text-field">
                                            @Html.LabelFor(m => m.apellido_materno, new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.apellido_materno, new { @class = "text form-control" })
                                            @Html.ValidationMessageFor(m => m.apellido_paterno, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    @*@Html.DropDownListFor(
                                       m => m.role_id,
                                           new SelectList(
                                               new List<Object> {
                                                   new { value = 3, text= "Ventas"},
                                                   new { value = 4, text= "Compras"},
                                                   new { value = 5, text= "Embarque"}
                                               },
                                               "value",
                                               "text"
                                               )
                                           )*@
                                </div>
                            </div>
                        </div>
                        <div id="customer_contacts">
                            <div class="row">
                                <div class="col-md-5" style="padding-right: 30px;">
                                    <div class="form-group">
                                        <div id="contacts_email" class="field text-field">
                                            @Html.LabelFor(m => m.correo, new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.correo, new { @class = "text form-control" })
                                            @Html.ValidationMessageFor(m => m.correo, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3" style="padding-right: 30px;">
                                    <div class="form-group">
                                        <div id="contacts_phone" class="field text-field">
                                            @Html.LabelFor(m => m.telefono, new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.telefono, new { @class = "text form-control" })
                                            @Html.ValidationMessageFor(m => m.telefono, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4" style="padding-right: 30px;">
                                    <div class="form-group">
                                        <div id="contacts_birthday" class="field text-field">
                                            @Html.LabelFor(m => m.fecha_nacimiento, new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.fecha_nacimiento, new { @class = "text form-control", @type = "date" })
                                            @Html.ValidationMessageFor(m => m.fecha_nacimiento, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="customer_details_password">
                            <div class="row">
                                <div class="col-md-4" style="padding-right: 30px;">
                                    <div class="form-group">
                                        <div id="details_username" class="field text-field">
                                            @Html.LabelFor(m => m.username, new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.username, new { @class = "text form-control" })
                                            @Html.ValidationMessageFor(m => m.username, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4" style="padding-right: 30px;">
                                    <div class="form-group">
                                        <div id="details_password" class="field text-field">
                                            @Html.LabelFor(m => m.pass, new { @class = "control-label" })
                                            @Html.PasswordFor(m => m.pass, new { @class = "text form-control" })
                                            @Html.ValidationMessageFor(m => m.pass, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4" style="padding-right: 30px;">
                                    <div class="form-group">
                                        <div id="details_confirm_password" class="field text-field">
                                            @Html.LabelFor(m => m.confpass, new { @class = "control-label" })
                                            @Html.PasswordFor(m => m.confpass, new { @class = "text form-control" })
                                            @Html.ValidationMessageFor(m => m.confpass, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 col-md-offset-8" style="text-align: right; padding-right: 30px;">
                                <div class="form-group control-label">
                                    <p class="required" style=" font-weight:bold !important;">* Campos obligatorios</p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="alert-danger">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="actions form-group">
                            <div class="row">
                                <div class="col-md-4 col-md-offset-4">
                                    <input type="submit" value="Confirmar" class="button btn btn-block btn-success" id="register_customer">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}