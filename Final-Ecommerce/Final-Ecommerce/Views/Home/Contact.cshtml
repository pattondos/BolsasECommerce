@model Final_Ecommerce.Models.ContactoModel
@using Final_Ecommerce.Models.DAL
@{
    ViewBag.Title = "Contacto";
}
<div class="about">

    <h2>Contáctanos</h2>
    <br />
    <div class="row">
        <div class="col-md-4 col-xs-4 col-lg-4">
            <span class="dot"><i class="fa fa-phone"></i></span>
            <h3 class="phone-number-contact">+52 1 722 999 9999</h3>
        </div>
        <div class="col-md-4 col-xs-4 col-lg-4">
            <span class="dot"><i class="fa fa-envelope-o"></i></span>
            <br />
            <br />
            <address>
                <strong>Soporte:</strong>   <a href="#">soporte@ecommerce.com</a><br />
                <strong>Mercadotecnía:</strong> <a href="#">marketing@ecommerce.com</a>
            </address>
        </div>
        <div class="col-md-4 col-xs-4 col-lg-4">
            <span class="dot"><i class="fa fa-facebook-f"></i></span>
            <h3 class="phone-number-contact">ecommerce batidos</h3>
        </div>
    </div>
    <h2>Envíanos un mensaje</h2>
    <br />
    <div id="form-contact" style="text-align:left;">
        @using (Html.BeginForm("Contact", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1 col-12">
                    <div class="form-group">
                        <div id="contactpage_email" class="field">
                            @*@if (Request.IsAuthenticated)
                                {
                                    Model.nombre = ((Usuarios)Session["usr"]).nombre + " " + ((Usuarios)Session["usr"]).apellido_paterno
                                        + " " + ((Usuarios)Session["usr"]).apellido_materno;
                                    @Html.TextBoxFor(m => m.nombre, new { @class = "text form-control"})
                                }
                                else
                                {  }*@
                            @Html.LabelFor(m => m.nombre, new { @class = "control-label", @style = "font-weight: bold;" })
                            @Html.TextBoxFor(m => m.nombre, new { @class = "text form-control" })
                            @Html.ValidationMessageFor(m => m.nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div id="contactpage_name" class="field">
                            @*@if (Request.IsAuthenticated)
                                {
                                    Model.email = ((Usuarios)Session["usr"]).correo;
                                    @Html.TextBoxFor(m => m.nombre, new { @class = "text form-control" })
                                }
                                else
                                {

                                }*@
                            @Html.LabelFor(m => m.email, new { @class = "control-label", @style = "font-weight: bold;" })
                            @Html.TextBoxFor(m => m.email, new { @class = "text form-control" })
                            @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div id="contactpage_phone" class="field">
                            @*@if (Request.IsAuthenticated)
                                {
                                    Model.telefono = ((Usuarios)Session["usr"]).telefono != "" ? ((Usuarios)Session["usr"]).telefono : "";
                                    @Html.TextBoxFor(m => m.nombre, new { @class = "text form-control" })
                                }
                                else
                                {
                                }*@
                            @Html.LabelFor(m => m.telefono, new { @class = "control-label", @style = "font-weight: bold;" })
                            @Html.TextBoxFor(m => m.telefono, new { @class = "text form-control" })
                            @Html.ValidationMessageFor(m => m.telefono, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-5 col-sm-offset-1 col-12">
                    <div class="form-group">
                        <div id="contactpage_message">
                            @Html.LabelFor(m => m.mensaje, new { @class = "control-label", @style = "font-weight: bold;" })
                            @Html.TextAreaFor(m => m.mensaje, new { @class = "text form-control" })
                            @Html.ValidationMessageFor(m => m.mensaje, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div style="text-align:right;" class="actions">
                            <input type="submit" value="Enviar" class="button btn btn-success" id="send-message-btn">
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-11" style="text-align: right; margin-right: 2rem;">
                <div class="form-group control-label">
                    <p class="required" style=" font-weight:bold !important;">* Campos obligatorios</p>
                </div>
            </div>

            if (Session["secc"] != null)
            {
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <div class="alert-success alert alert-dismissible" style="height: 40px !important; padding: 10px 20px;">
                            <a href="#" class="close" style="padding-right: 10px;" data-dismiss="alert" aria-label="close">&times;</a>
                            <span>@Session["secc"]</span>
                        </div>
                    </div>
                </div>
                Session["secc"] = null;
            }

            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="alert-danger">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>