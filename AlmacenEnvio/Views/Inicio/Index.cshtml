@{
    ViewBag.Title = "Ordenes de venta";
    ViewBag.SubTitle = "Resúmen de pedidos";
}
@section scripts{
    <!-- Morris Charts JavaScript -->
    <script src="~/Content/js/jquery.js"></script>
    @*<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>*@
    <script src="~/Content/js/plugins/morris/raphael.min.js"></script>
    <script src="~/Content/js/plugins/morris/morris.min.js"></script>
    <script src="~/Content/js/plugins/morris/morris-data.js"></script>
}


<div id="dashboard" class="row">
    <div class="col-lg-4 col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-shopping-cart fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.NewOrders</div>
                        <div>Nuevas órdenes</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <a href="@Url.Action("NuvasOrdenes", "OrdenVenta")"><i class="fa fa-fw fa-shopping-cart"></i> Ver detalles</a>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-gift fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.ShippedOrders</div>
                        <div>Órdenes enviadas</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <a href="@Url.Action("OrdenesEnviadas", "OrdenVenta")"><i class="fa fa-fw fa-shopping-cart"></i> Ver detalles</a>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-check fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@ViewBag.DeliveredOrders</div>
                        <div>Órdenes entregadas</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <a href="@Url.Action("OrdenesEntregadas", "OrdenVenta")"><i class="fa fa-fw fa-shopping-cart"></i> Ver detalles</a>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Panel de Ventas</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Número de orden</th>
                                <th>Fecha de orden</th>
                                <th>Subtotal(MXN)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @ViewBag.latestOrders)
                            {

                                <tr>
                                    <td>@item.OrderID</td>
                                    <td>@item.OrderDate</td>
                                    <td>$ @item.TotalAmount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="text-right">
                    <a href="@Url.Action("Index", "OrdenVenta")"><i class="fa fa-fw fa-shopping-cart"></i> Ver órdenes de venta</a>
                </div>
            </div>
        </div>
    </div>
</div>
