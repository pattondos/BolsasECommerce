@model IEnumerable<AlmacenEnvio.Models.Order>
@{
    ViewBag.Title = "OrdenesEntregadas";

}
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("Número de orden")
        </th>
        <th>
            @Html.DisplayName("ID cliente")
        </th>
        <th>
            @Html.DisplayName("Tipo de pago")
        </th>
        <th>
            @Html.DisplayName("Número de envío")
        </th>
        <th>
            @Html.DisplayName("Descuento")
        </th>
        <th>
            @Html.DisplayName("Total")
        </th>
        <th>
            @Html.DisplayName("Fecha de orden")
        </th>

        <th>Detalles del pedido</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingDetail.ShippingID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                $
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>

            <td>
                @Html.ActionLink("Ver Detalles", "Detalles", new { id = item.OrderID }, new { @class = "btn btn-info" })
            </td>
           
        </tr>
    }
</table>


